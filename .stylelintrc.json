{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "selector-class-pattern": "^([A-Z][a-zA-Z0-9]+|[a-z][a-z0-9]*(-[a-z0-9]+)*|Mui.*)$",
    "selector-pseudo-class-no-unknown": [
      true,
      { "ignorePseudoClasses": ["global"] }
    ],
    "media-feature-range-notation": "prefix"
  }
}
